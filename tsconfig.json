{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2017"],
    "outDir": "build",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true
  },
  "exclude": ["build", "node_modules"]
}
